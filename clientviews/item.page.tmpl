{{template "client-base" .}}

{{define "title"}}
    {{ index (.Page.TitleMap) $.Lang}}
{{end}}

{{define "css"}}

    <style>
        video {
            width: 100% !important;
            height: auto !important;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/plyr/3.5.6/plyr.css" integrity="sha256-YVY0cgMlN3Yk6z5+sLnD90gFlKARWzjDwWSnReb0ATI=" crossorigin="anonymous" />
{{end}}

{{define "flyout"}}

{{end}}


{{define "content"}}

{{end}}


{{define "body"}}
    <div class="clearfix"></div>

    <div class="is-section is-section-100 is-box is-dark-text">
        <div class="is-boxes">
            <div class="is-box-centered">
                <div class="is-container is-builder container-fluid is-content-1100" id="contentareaKjBWooO">

                    <div class="row">
                        <div class="col-md-12 mt-5">
                            {{$item := index .RowSets "item"}}
                            <h3 class="text-center">
                                {{$item.Year}} {{$item.Make.Make}} {{$item.Model.Model}} {{$item.Trim}}
                                <span class="text-danger">{{formatCurrency $item.Cost}}<sup>*</sup></span>
                            </h3>
                            {{if lt $item.TotalMSR $item.Cost}}
                                <h5 class="text-center"><em>MSRP {{formatCurrency $item.TotalMSR}}</em></h5>
                            {{end}}
                        </div>
                    </div>

                    {{if ne $item.Video.VideoName ""}}
                        <div class="row">
                            <div class="col-md-12">
                                <video class="" controls autoplay muted playsinline
                                       poster="https://www.wheelsanddeals/storate/videos/{{$item.Video.Thumb}}">
                                    <source type="video/mp4"
                                            src="https://www.wheelsanddeals.ca/storage/videos/{{$item.Video.ID}}-{{$item.Video.FileName}}"/>
                                </video>
                            </div>
                        </div>
                    {{end}}

                    {{if gt (len $item.Images) 0}}
                        <div class="row">
                            <div class="col-md-12">

                                <div id="item-slider"
                                     class="carousel slide carousel-fade"
                                     data-ride="carousel"
                                     data-interval="3000"
                                     data-pause="hover">

                                    <ol class="carousel-indicators">
                                        {{range $index, $value := $item.Images}}
                                            {{if eq $index 0}}
                                                <li data-target="#item-slider" data-slide-to="{{$index}}"
                                                    class="d-block active"></li>
                                            {{else}}
                                                <li data-target="#item-slider" data-slide-to="{{$index}}"
                                                    class="d-block"></li>
                                            {{end}}
                                        {{end}}
                                    </ol>
                                    <div class="carousel-inner">
                                        {{$first := true}}
                                        {{range $item.Images}}
                                            {{if $first}}
                                                <div class="carousel-item active">
                                                    <img src="https://www.wheelsanddeals.ca/storage/inventory/{{$item.ID}}/{{.Image}}">
                                                </div>
                                            {{else}}
                                                <div class="carousel-item">
                                                    <img src="https://www.wheelsanddeals.ca/storage/inventory/{{$item.ID}}/{{.Image}}">
                                                </div>
                                            {{end}}
                                            {{$first = false}}
                                        {{end}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{end}}

                    <div class="row">
                        <div class="col-md-12">
                            {{safeHTML $item.Description}}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <hr>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-md-3 col-xs-12">
                            <div class="card card-body bg-light" style="width: 18rem;">
                                <div class="card-body">
                                    <strong>Stock #:</strong> {{$item.StockNo}}<br>
                                    <strong>Trim:</strong> {{$item.Trim}}<br>
                                    <strong>Kilometers:</strong> {{$item.Odometer}}<br>
                                    <strong>Exterior Color:</strong> {{$item.ExteriorColour}}<br>
                                    <strong>Engine:</strong> {{$item.Engine}}<br>
                                    <strong>VIN:</strong> {{$item.Vin}}<br>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-xs-12 text-center">
                            <p class="text-danger" style="font-weight: bold">Your Benefits when buying from
                                Wheels and Deals Include:
                            </p>

                            {{if eq $item.VehicleMakesID 47}}
                                <div data-hide="true" class="hidden">
                                    <span class="rotator" style="color: #a94442; font-weight: bold;">VIP Discounts & Savings on Parts & Labor,First Service Included,Full Tank of Gas</span>
                                </div>
                            {{else}}
                                <div data-hide="true" class="hidden"> <!-- other powerports -->
                                    <span class="rotator" style="color: #a94442; font-weight: bold;">VIP Discounts & Savings on Accessories,VIP Discounts & Savings on Parts & Labor,No Charge 1st Scheduled Service "done by us",Full Tank of Gas</span>
                                </div>
                            {{end}}

                            <div class="mt-5"></div>

                            <img src="/client/static/logo.png" alt="logo" class="img img-fluid" style="max-width: 300px;">

                            <div class="text-center">
                                <a href="http://www.autofinance.cibc.com/#/pre-approval/redirect?dealerid=C05722"
                                   target="_blank">
                                    <img src="/client/static/cibc.png" alt="">
                                </a>

                                <p class="text-center">
                                    <strong>DEALER INFORMATION:</strong><br>
                                    Jim Gilbert's PowerSports<br>
                                    402 St Marys St #2<br>
                                    Fredericton, NB<br>
                                    E3A 8H5<br>
                                    Phone: (506) 459-6831
                                </p>
                            </div>

                        </div>

                        <div class="col-md-3 col-xs-12">
                            <div class="card card-body" style="width: 18rem;">
                                <div class="card-body">
                                    <a class="btn btn-block btn-danger"
                                       href="#!">
                                        <i style="color: white;" class="fa fa-dollar-sign"></i> Fast Financing
                                    </a>

                                    <a class="btn btn-block btn-danger"
                                       href="#!">
                                        <i style="color: white;" class="fa fa-car"></i> Request a test drive
                                    </a>

                                    <a class="btn btn-block btn-danger"
                                       href="#!">
                                        <i style="color: white;" class="fa fa-envelope"></i> Email a Friend
                                    </a>

                                    <a class="btn btn-block btn-danger"
                                       href="#!"
                                        onclick="openQQ('{{$item.ID}}', '{{$item.Year}} {{$item.Make.Make}} {{$item.Model.Model}} {{$item.Trim}}', '{{$item.StockNo}}')">
                                        Quick Quote
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <hr>
                        </div>
                    </div>

                    <div class="row d-flex justify-content-center">
                        {{$sales := index .RowSets "sales"}}
                        {{range $sales}}
                            <div class="col-md-2 text-center">
                                <a href="https://www.wheelsanddeals.ca/sales/{{.Slug}}" target="_blank">
                                    <img src="https://www.wheelsanddeals.ca/salesstaff/{{.Image}}" alt="image"
                                         class="img img-fluid">
                                </a>
                            </div>
                        {{end}}
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <hr>
                            <p>
                                * All advertised prices exclude government fees and taxes, any finance charges and any
                                dealer
                                document preparation charges. While every reasonable effort is made to ensure the
                                accuracy of this
                                data, we are not responsible for any errors or omissions contained on these pages.
                                Please verify any
                                information in question with a dealership sales representative.
                            </p>
                            <hr>
                            <p>
                                ** We accept all trade ins and recommend your purchase of credit protection and extended
                                vehicle
                                protection, however "as always the choice is yours". Jim Gilbert's Wheels and Deals is
                                Canada's Best
                                six acre Car Shopping Experience and we would love to share our Huggable knowledge with
                                you. You
                                will receive many extras, the warm Huggable feeling and the good attention that has made
                                Canada's
                                Huggable Car Dealer Famous. Shop us First, Feel the Difference... then compare.

                            </p>
                        </div>
                    </div>

                </div> <!-- container -->
            </div>
        </div>
    </div>
{{end}}

{{define "buttons"}}

{{end}}


{{define "js"}}
    <div class="modal modal-fade" tabindex="-1" role="dialog" id="compareModal">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Compare</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="compareDiv">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/plyr/3.5.6/plyr.min.js" integrity="sha256-voP3sbDhk+YDZKsGO8dpMGk9qzne1cf3f1CRgjwRnrk=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/plyr/3.5.6/plyr.min.js.map" integrity="undefined" crossorigin="anonymous"></script>

    {{template "powersports-js" .}}

{{end}}